{
    "meta": {
        "label": "Text Cleaning",
        "description": "Tokenize, filter and lemmatize text data in 54 languages",
        "icon": "icon-align-justify",
        "displayOrderRank": 3
    },
    "selectableFromDataset": "input_dataset",
    "kind": "PYTHON",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input dataset",
            "description": "Dataset with a raw text column",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output dataset",
            "description": "Dataset with tokenized, filtered and lemmatized text",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "paramsPythonSetup": "get_token_filters.py",
    "params": [
        {
            "name": "separator_input",
            "label": "Input parameters",
            "type": "SEPARATOR"
        },
        {
            "name": "text_column",
            "label": "Text column",
            "type": "COLUMN",
            "mandatory": true,
            "columnRole": "input_dataset",
            "allowedColumnTypes": [
                "string"
            ]
        },
        {
            "type": "SELECT",
            "name": "language",
            "label": "Language",
            "getChoicesFromPython": true,
            "defaultValue": "en"
        },
        {
            "name": "language_column",
            "label": "Language column",
            "type": "COLUMN",
            "description": "Column containing ISO 639-1 language codes",
            "columnRole": "input_dataset",
            "allowedColumnTypes": [
                "string"
            ],
            "visibilityCondition": "model.language == 'language_column'"
        },
        {
            "name": "separator_cleaning",
            "label": "Cleaning parameters",
            "type": "SEPARATOR"
        },
        {
            "type": "MULTISELECT",
            "name": "token_filters",
            "label": "Token filters",
            "description": "Remove tokens matching these attributes",
            "getChoicesFromPython": true,
            "defaultValue": [
                "is_punct",
                "is_symbol",
                "is_stop",
                "like_num",
                "is_currency",
                "is_measure",
                "is_datetime",
                "like_url",
                "like_email",
                "is_username",
                "is_hashtag",
                "is_emoji"
            ]
        },
        {
            "name": "lemmatization",
            "label": "Lemmatization",
            "description": "Simplify words to their “lemma” form e.g. going -> go, mice -> mouse",
            "type": "BOOLEAN",
            "defaultValue": true
        },
        {
            "name": "lowercase",
            "label": "Lowercase",
            "description": "Convert words to lowercase",
            "type": "BOOLEAN",
            "defaultValue": true
        },
        {
            "name": "separator_advanced",
            "label": "Advanced",
            "type": "SEPARATOR"
        },
        {
            "name": "expert",
            "label": "Expert mode",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "type": "SELECT",
            "name": "unicode_normalization",
            "label": "Unicode normalization",
            "description": "Post-processing step cf. https://docs.python.org/3/library/unicodedata.html",
            "visibilityCondition": "model.expert",
            "selectChoices": [
                {
                    "value": "NONE",
                    "label": "None"
                },
                {
                    "value": "NFC",
                    "label": "NFC"
                },
                {
                    "value": "NFKC",
                    "label": "NFKC"
                },
                {
                    "value": "NFD",
                    "label": "NFD"
                },
                {
                    "value": "NFKD",
                    "label": "NFKD"
                }
            ],
            "defaultValue": "NONE"
        },
        {
            "name": "keep_filtered_tokens",
            "label": "Keep filtered tokens",
            "description": "Store filtered tokens in additional columns in the output dataset ",
            "type": "BOOLEAN",
            "defaultValue": false,
            "visibilityCondition": "model.expert"
        }
    ],
    "resourceKeys": []
}