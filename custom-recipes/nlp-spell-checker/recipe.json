{
   "meta":{
      "label":"Misspelling Correction",
      "description":"Identify and correct misspellings in text columns for 36 languages.",
      "icon":"icon-strikethrough"
   },
   "selectableFromDataset":"input_dataset",
   "kind":"PYTHON",
   "inputRoles":[
      {
         "name":"input_dataset",
         "label":"Input dataset",
         "description":"Dataset with text columns containing misspelled words",
         "arity":"UNARY",
         "required":true,
         "acceptsDataset":true,
         "acceptsManagedFolder":false
      },
      {
         "name":"custom_vocabulary",
         "label":"Custom vocabulary (optional)",
         "description":"Dataset with a single column of words that should not be corrected",
         "arity":"UNARY",
         "required":false,
         "acceptsDataset":true,
         "acceptsManagedFolder":false
      }
   ],
   "outputRoles":[
      {
         "name":"output_dataset",
         "label":"Output dataset",
         "description":"Output dataset with identified misspellings and corrected text",
         "arity":"UNARY",
         "required":false,
         "acceptsDataset":true
      }
   ],
