{
    "meta": {
        "label": "Misspelling Correction",
        "description": "Identify and correct misspellings in a text column",
        "icon": "icon-strikethrough"
    },
    "selectableFromDataset": "input_dataset",
    "kind": "PYTHON",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input dataset",
            "description": "Dataset with text columns containing misspelled words",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true,
            "acceptsManagedFolder": false
        },
        {
            "name": "custom_vocabulary",
            "label": "Custom vocabulary (optional)",
            "description": "Dataset with a single column of words that should not be corrected",
            "arity": "UNARY",
            "required": false,
            "acceptsDataset": true,
            "acceptsManagedFolder": false
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output dataset",
            "description": "Output dataset with identified misspellings and corrected text",
            "arity": "UNARY",
            "required": false,
            "acceptsDataset": true
        }
    ],
    "paramsPythonSetup": "get_language_list.py",
    "params": [
        {
            "name": "separator_input",
            "label": "Input parameters",
            "type": "SEPARATOR"
        },
        {
            "name": "text_column",
            "label": "Text column",
            "type": "COLUMN",
            "mandatory": true,
            "columnRole": "input_dataset",
            "allowedColumnTypes": [
                "string"
            ]
        },
        {
            "type": "SELECT",
            "name": "language",
            "label": "Language",
            "getChoicesFromPython": true,
            "defaultValue": "en"
        },
        {
            "name": "language_column",
            "label": "Language column",
            "type": "COLUMN",
            "description": "Column containing ISO 639-1 language codes",
            "columnRole": "input_dataset",
            "allowedColumnTypes": [
                "string"
            ],
            "visibilityCondition": "model.language == 'language_column'"
        },
        {
            "name": "separator_advanced",
            "label": "Advanced",
            "type": "SEPARATOR"
        },
        {
            "name": "expert",
            "label": "Expert mode",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "type": "INT",
            "name": "edit_distance",
            "label": "Edit distance",
            "defaultValue": 2,
            "minI": 0,
            "maxI": 100,
            "description": "Maximum edit distance between a word and its correction. Increase to correct more.",
            "visibilityCondition": "model.expert == true"
        },
        {
            "type": "STRING",
            "name": "ignore_word_regex",
            "label": "Ignore pattern",
            "defaultValue": "",
            "description": "Regular expression for words not to be corrected. Ex: \"\\w+\\d\" to preserve \"home1\".",
            "visibilityCondition": "model.expert == true"
        },
        {
            "type": "INT",
            "name": "batch_size",
            "label": "Batch size",
            "defaultValue": 1000,
            "minI": 1,
            "maxI": 1000000,
            "description": "Number of rows to process in each batch. Decrease for long text data.",
            "visibilityCondition": "model.expert == true"
        }
    ],
    "resourceKeys": []
}